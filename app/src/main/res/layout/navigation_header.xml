<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_nav_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/nav_view_image_bg" />

    <RelativeLayout
        android:id="@+id/nav_header_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_person"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_person" />

        <View
            android:id="@+id/view_nav_header"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_nav_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_nav_header"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Sign into TMDB"
            android:textColor="#fff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nav_header"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Tap here to learn more"
            android:textColor="#fff" />
    </RelativeLayout>

</RelativeLayout>